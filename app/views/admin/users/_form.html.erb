<div class="sidebar">
  <div class="searh-form">
    <h4 class="sb-title" align="center"><%= @user.name %></h4>
    <%= render "devise/shared/error_messages", resource: @user %>
    <%= form_with( model: @user,url: admin_user_path(@user), local:true,  class:'form-style-1', validate: true) do |f| %>
      <div class="row">
        <div class = "row">
           <div class="col-md-5 col-md-offset-4 form-it">
            <%= f.label :profile_pic%>
            <%= image_tag user_profile_pic(@user,400,400), class: 'img-circle' %>
          </div>
        </div>
        <div class = "row">
          <div class="col-md-5 col-md-offset-4 form-it">
            <%= f.label :name%>
            <%= f.text_field :name, autofocus: true, autocomplete: "name"  %>
          </div>
        </div>
        <div class = "row">
          <div class="col-md-5 col-md-offset-4 form-it">
            <%= f.label :profile_pic, value:'Select Picture' %>
            <%= f.file_field :profile_pic, autocomplete: "profile_pic", accept: 'image/png,image/jpeg'  %>
          </div>
        </div>
        <% if @user.profile_pic.attached? %>
          <div class = "row">
            <div class="col-md-5 col-md-offset-4 form-it">
              <%= f.check_box :remove_profile_pic %>
              <div class ="row">
                <div class="col-md-5">
                  <%= f.label :remove_profile_pic %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class = "row">
          <div class="col-md-5 col-md-offset-4 form-it">
            <%= f.label :email %>
            <%= f.email_field :email, autocomplete: "email" %>    
          </div>
        </div>
        <% if devise_mapping.confirmable? && @user.pending_reconfirmation? %>
          <div class = "row">
            <div class="col-md-5 col-md-offset-4 form-it">
              <p>Currently waiting confirmation for: <%= @user.unconfirmed_email %><p>
            </div>
          </div>
        <% end %>
        <br />          
        <div class="col-md-5 col-md-offset-5 ">
          <%=f.button :submit, class: 'my-submit-btn my-submit-btn movie-item-style-1 movie-item-style-2' do %>
            <a>Submit</a>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>




 

 
