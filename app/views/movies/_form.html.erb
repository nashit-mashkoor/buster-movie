<div class="sidebar">
  <div class="searh-form">
    <h4 class="sb-title">Create a new movie</h4>
    <%= render partial: 'partials/error', locals: {object: @movie} %>
    <%= form_with(model: @movie,local: true, class: 'form-style-1', validate: true) do |form| %>
      <div class="row">
        <div class="col-md-8 col-md-offset-1 form-it">
           <%= form.label :title, placeholder: 'Movie Name' %>
           <%= form.text_field :title, placeholder:"Enter name"%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-1  form-it">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'tinymce' %>
          <%= tinymce %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-1  form-it">
          <%= form.label :length %>
          <%= form.text_field :length, placeholder: "mins" %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-1  form-it">
          <%= form.label :year %>
          <%= form.date_select :year %>
        </div>
      </div>
       <div class="row">
        <div class="col-md-8 col-md-offset-3  form-it">
          <%= form.label :thumbnail %>
          <%= form.file_field :thumbnail, accept: 'image/png,image/jpeg' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-3  form-it">
          <%= form.label :posters %>
          <%= form.file_field :posters , multiple: true, accept: 'image/png,image/jpeg'%>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-3  form-it">
          <%= form.label :trailer %>
          <%= form.file_field :trailer, accept: 'video/mp4, video/quicktime' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-1  form-it">
          <%= form.label "Actors" %>
          <div class="group-ip">
            <%= form.select(:actor_ids, get_actors_for_movie(@movie), {prompt: 'Please Select actors to add', selected: @movie.actors }, { class:'ui fluid dropdown' , multiple: true }) %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8 col-md-offset-3 form-it">
        <%= form.button :submit , class: 'my-submit-btn movie-item-style-1 movie-item-style-2'%>
        </div>
      </div>
   <% end %>
  </div>
</div>
