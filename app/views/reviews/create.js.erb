$(document).ready(function(){
  flash_update("<%= j (render partial: 'layouts/jsflash') %> ");
  <% if !@review.errors.any? %>
    $("div#review-list").prepend(" <%= j(render partial: 'review', locals: {review: @review})%>");
    $('input#review_title').val("");
    $('input#review_comment').val("");
    $('div#rating-form').val(""); 
    $('#rating-form').raty('click', 0);
    $('div.average-review-rating').data('score', "<%=calculate_average_review(@movie) %>");
    $('#number-average-review-rating').text("<%=calculate_average_review(@movie) %>");
    $('div#movie-review-form').empty();
    $('.average-review-rating').raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score')
      }
    });
    $('.review-rating').raty({
      readOnly: true,
      score: function() {
      return $(this).attr('data-score')
      }
    });
    $('#rating-form').raty({
      scoreName: 'review[rating]'
    });
    $('#review_body').val('');
    $("b#movie-review-count-1").text(parseInt($("b#movie-review-count-1").text()) + 1);
    $("b#movie-review-count-2").text(parseInt($("b#movie-review-count-2").text()) + 1);
  <% end %>
});

