
<div class="sidebar">
  <div class="searh-form">
    <h4 class="sb-title"></h4>'
      <% if edit == true %>
        <h4 class="sb-title">Edit Actor</h4>
      <% else %>
        <h4 class="sb-title">New Actor</h4>
      <% end%>
      <%= render partial: 'partials/error', locals: {object: @actor} %>
      <%= form_with(model: actor, local: true , html: {class: 'form-style-1', autocomplete: true}, validate: true )  do |f| %>
        <div class="row">
          <div class="col-md-10 col-md-offset-1 form-it">
            <% if actor.actor_pic.attached? %>
              <%= image_tag actor.resized_actor_pic(270,400) %>
            <%else %>
              <h1> No picture Found </h1>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-10 col-md-offset-1 form-it">
            <%= f.label :actor_pic, placeholder: ''  %>
            <%= f.file_field :actor_pic, autocomplete: true, value: actor.actor_pic, accept: 'image/png,image/jpeg' %>
          </div>
        </div>
        <div class="row">
            <div class="col-md-10 col-md-offset-1 form-it">
              <%= f.label :name %>
              <%= f.text_field :name, placeholder: 'Actors Name', autocomplete: true, value: actor.name %>
            </div>
        </div>
        <div class="row">
          <div class="col-md-5 col-md-offset-4 form-it">                                
            <%= f.button :submit , class: 'my-submit-btn movie-item-style-1 movie-item-style-2'%>
          </div>
        </div>
      <% end %>
  </div>
</div> 
